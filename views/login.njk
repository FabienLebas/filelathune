{% extends "layout.njk" %}

{% block main %}
<h1>Bienvenue sur FileLaThune</h1>
<p>Les bons comptes font les bons amis</p>
<hr />
<h2>Vous avez déjà un compte ?</h2>
<form action="/" method="POST">
  <table>
    <tr>
      <td>
        <label>E-mail</label>
      </td>
      <td>
        <input type="text" name="username"/><br/>
      </td>
    </tr>
    <tr>
      <td>
        <label>Mot de passe</label>
      </td>
      <td>
        <input type="password" name="password"/>
      </td>
    </tr>
  </table>
  <div>
    <button type="submit" class="btn btn-primary">
      Connecter
    </button>
  </div>
</form>
<hr />
<h2>Nouveau sur le site ?</h2>
<div id="fb-root"></div>

<a href="/account" class="btn btn-success btn-lg">Créer un compte</a>
<div class="col-3">
</div>
<div class="fb-login-button" data-max-rows="1" data-size="large" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false">
  Créez votre compte avec Facebook
</div>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '140184933335614',
      cookie     : true,
      xfbml      : true,
      version    : '^0.3.2'
    });

    FB.AppEvents.logPageView();

  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.11&appId=140184933335614";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
{% endblock %}
